{
  "compilerOptions": {
		"baseUrl": "src",
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
		"noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,		
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
	"paths": {
		"@assets/*": ["src/assets/*"],
		"@components/*": ["src/components/*"],
		"@modules/*": ["src/modules/*"],
		"@pages/*": ["src/pages/*"],
		"@lib/*": ["src/lib/*"],
		"@redux/*": ["src/redux/*"],
		"@shared/*": ["src/shared/*"],
		"@styles/*": ["src/styles/*"],
		"@types/*": ["src/types/*"],
		"@utils/*": ["src/utils/*"],
	},	
  "include": ["src","next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
